<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss.SSS} %highlight(%-5level) [%5.5thread] %cyan(%class{0}.%method:%line) - %msg%n
      </pattern>
    </encoder>
  </appender>
</configuration>
